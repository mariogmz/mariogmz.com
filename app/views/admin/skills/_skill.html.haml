= turbo_frame_tag dom_id(skill), class: "flex justify-between space-x-6 py-3" do
  .flex-grow
    %p.font-bold= skill.name
    - if skill.category.present?
      %p
        %span.mr-3.font-bold Category:
        %span.pr-3.border-r-2= "#{skill.category.order}"
        %span.ml-3= skill.category.name
    %p.inline-flex.items-end.space-x-3
      %span.font-bold Expertise:
      %span= stars(skill.expertise)
  .flex.items-center.space-x-3.flex-end
    = link_to edit_admin_skill_path(skill), class: "button-icon" do
      = icon "pencil"
    = link_to admin_skill_path(skill), remote: true, method: :delete, class: "button-icon" do
      = icon "trash"
