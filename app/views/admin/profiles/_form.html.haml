= form_for [:admin, @profile] do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |message|
          %li= message
  .flex.flex-col.space-y-6
    .field
      = f.label :first_name
      = f.text_field :first_name
    .field
      = f.label :last_name
      = f.text_field :last_name
    .field
      = f.label :role
      = f.text_field :role
    .field
      = f.label :location
      = f.text_field :location
    .field.flex.space-x-3
      = f.label :visa
      = f.check_box :visa
    .field.flex.space-x-3
      = f.label :realocation
      = f.check_box :realocation
    .flex.justify-end.space-x-6
      = f.submit "Save", class: "button secondary"
      = yield
