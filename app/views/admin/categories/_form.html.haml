= turbo_frame_tag dom_id(category) do
  = form_for [:admin, category], id: dom_id(category), html: { class: "w-full" } do |f|
    - if category.errors.any?
      #error_explanation
        %h2= "#{pluralize(category.errors.count, "error")} prohibited this category from being saved:"
        %ul
          - category.errors.full_messages.each do |message|
            %li= message
    .flex.flex-col.space-y-6.py-6
      .field.inline
        = f.label :name
        = f.text_field :name
      .field.inline
        = f.label :order
        = f.number_field :order, min: 1
      .flex.justify-end.space-x-6
        = f.submit "Save", class: "button secondary"
        = yield
