.flex.py-12.space-y-6.flex-col.items-center.lg:flex-row.lg:items-start.lg:space-x-8.lg:space-y-0
  - if job.company_logo.attached? && job.company_logo.representable?
    = image_tag url_for(job.company_logo.variant(resize_to_limit: [nil, 150])), class: "w-32 h-32 rounded-full"
  .px-4.space-y-3.lg:flex-1.text-center.lg:text-left
    %h3.text-xl.divide-x.divide-space-cadet
      %span.px-3= job.company_name
      %span.px-3= job.role
    %h3.text-xl= date_range(job.start_date, job.end_date)
    %p= job.description
