= form_for [:admin, @job] do |f|
  - if @job.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :company_name
    = f.text_field :company_name
  .field
    = f.label :role
    = f.text_field :role
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :profile
    = f.text_field :profile
  .actions
    = f.submit 'Save'
