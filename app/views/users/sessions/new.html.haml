%h1 Log in

= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card" }) do |f|
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    = f.password_field :password, autocomplete: "current-password"
  .flex.justify-end.space-x-6
    - if devise_mapping.rememberable?
      .field.inline.items-center
        = f.label :remember_me
        = f.check_box :remember_me
    = f.submit "Login", class: "button secondary"
  = render "users/shared/links"
